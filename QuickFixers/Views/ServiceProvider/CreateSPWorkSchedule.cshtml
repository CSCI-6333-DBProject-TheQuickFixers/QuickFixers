@model QuickFixers.Models.CreateSPWSModel

@{
    ViewBag.Title = "CreateSPWorkSchedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Work Schedule</h2>


@using (Html.BeginForm("CreateWSAction", "ServiceProvider", FormMethod.Post, new {enctype = "multipart/form-data"})) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create New Work Schedule</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.WeekDay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownListFor(model => model.WeekDay, Model.DayList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WeekDay, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StartT, Model.ListOfTimeIntervals, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.StartT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.EndT, Model.ListOfTimeIntervals, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EndT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TZ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TZ, Model.TZList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TZ, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "WorkSchedule")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
